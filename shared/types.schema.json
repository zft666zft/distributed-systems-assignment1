{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
      "Beverage": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "isCarbonated": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "isActive": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "name",
          "isCarbonated",
          "description",
          "price",
          "isActive"
        ]
      },
      "BeverageIngredient": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "beverageId": {
            "type": "number"
          },
          "ingredientName": {
            "type": "string"
          },
          "quantity": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "required": [
          "beverageId",
          "ingredientName",
          "quantity",
          "notes"
        ]
      }
    }
  }
  